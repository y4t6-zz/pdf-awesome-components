extends ../templates/default/index

include ../components/header/_mixin
include ../components/hero/_mixin
include ../components/footer/_mixin
include ../components/ul/_mixin
include ../components/document-list/_mixin

block vars
  - var title='Main page - PDF AWESOME COMPONENTS'

block head_end
  link(rel="stylesheet" href="/css/style.css") 

block content
  +header('c-header--index')
  +hero()

  .c-block.c-block--mainPage.c-block--useThem
    .inner
      .c-block__columnList
        .c-block__column
          img(src='/img/content/useThem.png', alt='Using demonstrations')
        .c-block__column
          h2.
            Use them where you want <br/>on your page
  .c-block.c-block--mainPage.c-block--awesomeDoc
    .inner
      .c-block__header
        h2.
          The awesome documentation
      .c-block__columnList
        .c-block__column
          .c-block__awesomeDocNavWrap
            a(class='c-button c-button--hero c-button--mainColor', href='/components.html') SEE COMPONENTS
            p.
              Or choose them from list:
            nav
              +ul()
                 

        .c-block__column
          img(src='/img/content/theAwesomeDocs.png', alt='Document page demonstrations')

  +footer()
  
block body_end
